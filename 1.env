# Токен Telegram-бота
TELEGRAM_BOT_TOKEN=you-token-tg-bot

# Режим работы: "polling" или "webhook"
BOT_MODE=polling

# Публичный URL для вебхуков (используется, если BOT_MODE=webhook)
WEBHOOK_URL=https://yourdomain.com/telegram

# Адрес и порт для прослушивания вебхуков (например, для TLS)
LISTEN_ADDR=:8443

# Интервал для лонгпуллинга (в секундах)
POLL_INTERVAL=2

# Для подробного логирования
DEBUG=true

# Количество вопросов и ограничение по времени для теста
TEST_QUESTIONS=20
TEST_DURATION=20

# Тип базы данных
STORAGE_TYPE=json

# Список админов
ADMIN_IDS=123456789,987654321

